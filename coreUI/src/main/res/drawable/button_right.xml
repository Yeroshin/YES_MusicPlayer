<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>

            <item >
                <shape
                    android:shape="rectangle">
                    <corners
                        android:topRightRadius="10dp"
                        android:bottomRightRadius="10dp" />
                    <gradient
                        android:angle="90"
                        android:startColor="?attr/shadow"
                        android:endColor="?attr/light"
                        android:type="linear" />
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="2dp"
                >
                <shape android:shape="rectangle">
                    <corners
                        android:topRightRadius="9dp"
                        android:bottomRightRadius="9dp" />

                    <gradient
                        android:angle="90"
                        android:startColor="?attr/primary_endColor"
                        android:endColor="?attr/primary_startColor"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>

            <item >
                <shape
                    android:shape="rectangle">
                    <corners
                        android:topRightRadius="10dp"
                        android:bottomRightRadius="10dp" />
                    <gradient
                        android:angle="90"
                        android:startColor="?attr/shadow"
                        android:endColor="?attr/light"
                        android:type="linear" />
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="2dp"
                >
                <shape android:shape="rectangle">
                    <corners
                        android:topRightRadius="10dp"
                        android:bottomRightRadius="10dp" />

                    <gradient
                        android:angle="90"
                        android:startColor="?attr/primary_startColor"
                        android:endColor="?attr/primary_endColor"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>

    </item>

</selector>
