<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_flat"
    android:orientation="vertical"
    android:padding="8dp"
    android:theme="@style/Theme.MusicPlayer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/panel_flat"
        android:orientation="horizontal"
        android:padding="8dp">

        <include
            android:id="@+id/recyclerViewContainer"
            layout="@layout/dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                style="@style/margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <FrameLayout
                    style="@style/margin"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_space">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/add_playlist_btn"
                        style="@style/buttonSingleLow"
                        android:background="@drawable/button_single"
                        app:srcCompat="@drawable/playlist_plus" />
                </FrameLayout>

                <FrameLayout
                    style="@style/margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_space">

                    <EditText
                        android:id="@+id/playlistName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="@string/newPlaylist"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/green" />
                </FrameLayout>

            </LinearLayout>

            <include
                android:id="@+id/buttons"
                style="@style/margin"
                layout="@layout/cancel_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>