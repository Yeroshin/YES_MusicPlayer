<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp" />
            <corners
                android:radius="10dp" />

            <solid
                android:color="@color/light" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="@color/black" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="0dp"
                android:top="1dp"
                android:right="0dp"
                android:bottom="0dp" />
            <corners
                android:radius="10dp" />

            <solid
                android:color="@color/light" />
        </shape>
    </item>
    <item>

            <shape
            android:shape="rectangle"

            >
                <padding
                    android:left="7dp"
                    android:top="7dp"
                    android:right="7dp"
                    android:bottom="7dp" />
                <corners
                android:radius="10dp" />
                <solid
                    android:color="#111111" />


        </shape>
    </item>
    <item
        >
        <shape
            android:shape="rectangle"
            >

            <corners
                android:radius="0dp" />
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <gradient
                android:angle="90"
                android:startColor="#888d86"
                android:centerColor="#737570"
                android:endColor="#41423d"
                android:type="linear" />

        </shape>
    </item>


</layer-list>