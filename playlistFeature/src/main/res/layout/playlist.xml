<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/display">
        <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/playList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#000000"
            android:scrollbars="vertical"
            tools:itemCount="10"
            tools:listitem="@layout/item_track" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_space"
        android:orientation="horizontal"
        android:showDividers="beginning">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_media"
            style="@style/buttonLeftTall"
            android:background="@drawable/button_left"
            app:srcCompat="@drawable/file_plus" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_mode"
            style="@style/buttonSingleTall"
            android:background="@drawable/button_center"
            android:src="@drawable/button_mode_level_list" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_playlist"
            style="@style/buttonRightTall"
            android:background="@drawable/button_right"
            app:srcCompat="@drawable/playlist_edit" />

    </LinearLayout>

</LinearLayout>