<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item

        android:top="0dp"
        android:bottom="0dp"
        android:right="0dp"
        android:left="-20dp">
        <shape
            android:shape="rectangle"
            >
            <gradient
                android:angle="90"

                android:startColor="#030303"
                android:centerColor="#999999"
                android:endColor="#030303"

                android:type="linear"
                />
            <padding
                android:left="5dp"
                android:top="-20dp"
                android:right="5dp"
                android:bottom="-20dp" />
        </shape>
    </item>
    <item

        android:top="0dp"
        android:bottom="0dp"
        android:right="0dp"
        android:left="0dp">
        <shape
            android:shape="rectangle"
            >
            <gradient
                android:angle="90"

                android:startColor="#030303"
                android:centerColor="#aaaaaa"
                android:endColor="#030303"

                android:type="linear"
                />
            <padding
                android:left="2dp"
                android:top="-20dp"
                android:right="2dp"
                android:bottom="-20dp" />
        </shape>
    </item>
    <item

        android:top="0dp"
        android:bottom="0dp"
        android:right="0dp"
        android:left="0dp">
        <shape
            android:shape="rectangle"
            >
            <gradient
                android:angle="90"

                android:startColor="#070707"
                android:centerColor="#5e5e5e"
                android:endColor="#070707"

                android:type="linear"
                />



        </shape>
    </item>





</layer-list>