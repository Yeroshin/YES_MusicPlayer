<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/shadow" />
            <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />
            <gradient
                android:angle="270"
                android:startColor= "?attr/primary_endColor"
                android:endColor="?attr/primary_startColor"
                android:type="linear"
                android:useLevel="false"  />
            <corners android:radius="100dp"/>
        </shape>
    </item>
    <item >
        <shape
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shape="rectangle">


            <corners android:radius="100dp" />
            <solid android:color="?attr/on_primary_activated" />

        </shape>
    </item>
</layer-list>