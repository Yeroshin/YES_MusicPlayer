<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp" />
            <corners
                android:radius="10dp" />

            <solid
                android:color="?attr/light" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="?attr/shadow" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="0dp"
                android:top="1dp"
                android:right="0dp"
                android:bottom="0dp" />
            <corners
                android:radius="10dp" />

            <solid
                android:color="?attr/light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
                <padding
                    android:left="7dp"
                    android:top="7dp"
                    android:right="7dp"
                    android:bottom="7dp" />
                <corners
                android:radius="10dp" />
                <solid
                    android:color="?attr/primary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="0dp" />
            <stroke
                android:width="2dp"
                android:color="?attr/shadow" />
            <gradient
                android:angle="90"
                android:startColor="?attr/secondary_startColor"
                android:centerColor="?attr/secondary_centerColor"
                android:endColor="?attr/secondary_endColor"
                android:type="linear" />

        </shape>
    </item>


</layer-list>