<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/equalizers_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/display"
            android:orientation="horizontal">

            <com.yes.musicplayer.equalizer.presentation.ui.VerticalSeekBar
                android:id="@+id/verticalSeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:progressDrawable="@drawable/trackbar_progress"
                android:thumb="@drawable/thumb_r" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@drawable/panel_flat"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch1"
                style="@style/yesSwitch"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                style="@style/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="@string/preset"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/presetsSpinner"
                    style="@style/margin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_space"
                    android:dropDownWidth="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>