<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <gradient
                android:angle="270"
                android:startColor="?attr/branded_light"
                android:centerColor="?attr/branded_color"
                android:endColor="?attr/branded_dark"
                android:type="linear"
                android:useLevel="false"  />
            <stroke android:width="1dp" android:color="@android:color/black" />
            <size
                android:width="1dp"
                android:height="1dp"/>
        </shape>
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor= "?attr/branded_color"
                android:centerColor="#484848"
                android:endColor="#5d5d5d"
                android:type="linear"
                android:useLevel="false"  />
            <stroke android:width="1dp" android:color="#242424" />
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>
</layer-list>