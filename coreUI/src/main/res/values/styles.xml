<resources>
    <style name="Theme.AppCompat.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>

        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>
    <!-- Base application theme. -->
    <style name="text" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:shadowColor">#333333</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:singleLine">true</item>
    </style >
    <style name="ratingBar">
        <item name="colorControlNormal">#ffa800</item>
        <item name="colorControlActivated">#ffa800</item>
    </style>
    <style name="mainDisplay">

        <item name="android:background">@drawable/display</item>
    </style>
    <style name="buttonStyle">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="tint">@color/tint_pressed_state_list</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="buttonStyleTall" parent="buttonStyle">
        <item name="android:layout_height">@dimen/button_height_regular</item>
    </style>
    <style name="buttonStyleLow" parent="buttonStyleTall">
        <item name="android:layout_height">@dimen/button_height_small</item>
    </style>
    <style name="buttonLeftLow" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="buttonRightLow" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="buttonSingleLow" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="buttonLeftTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="buttonRightTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="buttonSingleTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>


</resources>
