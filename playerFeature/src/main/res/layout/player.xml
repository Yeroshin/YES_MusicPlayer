<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/padding"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:visibility="visible">

    <LinearLayout

        style="@style/margin"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="@drawable/display"
        android:orientation="vertical"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/secondary"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/playList"
                    android:textColor="?attr/on_secondary"
                    android:textSize="@dimen/font_size_regular" />

                <TextView
                    android:id="@+id/playList_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ellipsize="marquee"
                    android:focusable="true"

                    android:fontFamily="@font/a_lcdnova_allfont_ru"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"

                    android:textColor="?attr/secondary"
                    android:textSize="@dimen/font_size_large"
                    tools:text="hello" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/secondary"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/song"

                    android:textColor="?attr/on_secondary"
                    android:textSize="@dimen/font_size_regular"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/track_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"

                    android:fontFamily="@font/a_lcdnova_allfont_ru"
                    android:gravity="center_vertical"


                    android:textColor="?attr/secondary"
                    android:textSize="@dimen/font_size_large"
                    tools:text="привет" />

            </LinearLayout>

            <com.yes.player.presentation.ui.VisualizerView
                android:id="@+id/visualizerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="?attr/secondary"
            android:gravity="center_horizontal|center_vertical"

            android:text="@string/duration"
            android:textColor="?attr/on_secondary"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_top_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duration_counter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"

                android:background="@drawable/border_right"

                android:fontFamily="@font/a_lcdnova_allfont_ru"
                android:gravity="center_horizontal|center_vertical"
                android:letterSpacing="@dimen/letter_spacing_small"
                android:lines="1"
                android:maxLines="1"

                android:text="00:00"
                android:textColor="?attr/secondary"
                android:textSize="@dimen/font_size_coloss"
                tools:text="BUFFERING..." />

            <SeekBar
                android:id="@+id/seekBar"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/seek_bar"
                android:thumb="@android:color/background_dark" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/border_left"

                android:fontFamily="@font/a_lcdnova_allfont_ru"
                android:gravity="center_horizontal|center_vertical"
                android:text="00:00"
                android:textColor="?attr/secondary"
                android:textSize="@dimen/font_size_coloss" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/margin"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/button_space"
        android:backgroundTint="#000000"
        android:orientation="horizontal"
        android:padding="1dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_rew"
            style="@style/buttonLeftLow"
            android:background="@drawable/button_left"
            app:srcCompat="@drawable/rewind" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_play"
            style="@style/buttonSingleLow"
            android:background="@drawable/button_center"
            android:src="@drawable/button_play_state" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_fwd"
            style="@style/buttonRightLow"
            android:background="@drawable/button_right"
            app:srcCompat="@drawable/fast_forward" />

    </LinearLayout>


</LinearLayout>