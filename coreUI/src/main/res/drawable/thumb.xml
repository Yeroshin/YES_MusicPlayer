<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item

        >
        <shape
            android:shape="oval">
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
            <gradient
                android:angle="270"
                android:startColor= "?attr/primary_startColor"
                android:centerColor="?attr/primary_centerColor"
                android:endColor="?attr/primary_endColor"
                android:type="linear"
                android:useLevel="false"  />
            <stroke android:width="1dp" android:color="@android:color/black" />
            <size
                android:width="1dp"
                android:height="1dp"/>
        </shape>
    </item>
    <item >
        <shape
            android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor= "?attr/primary_endColor"
                android:centerColor="?attr/primary_centerColor"
                android:endColor="?attr/primary_startColor"
                android:type="linear"
                android:useLevel="false"  />
            <stroke
                android:width="1dp"
                android:color="?attr/shadow" />
            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>
    </item>
</layer-list>