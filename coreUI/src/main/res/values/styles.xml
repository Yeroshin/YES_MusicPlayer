<resources>
    <style name="Theme.AppCompat.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>

        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>
    <!-- Base application theme. -->
    <style name="text" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:shadowColor">#333333</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:singleLine">true</item>
    </style >

    <style name="textLabel" parent="margin">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style >
    <style name="textSmall" parent="margin">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style >
    <style name="yesSwitch" parent="margin" >
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:switchMinWidth">44dp</item>
    </style >
    <style name="ratingBar">
        <item name="colorControlNormal">#ffa800</item>
        <item name="colorControlActivated">#ffa800</item>
    </style>
    <style name="margin">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="padding">
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="mainDisplay">
        <item name="android:background">@drawable/display</item>
    </style>
    <style name="buttonStyle">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="tint">@color/tint_pressed_state_list</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="buttonStyleTall" parent="buttonStyle">
        <item name="android:layout_height">@dimen/button_height_regular</item>
    </style>
    <style name="buttonStyleLow" parent="buttonStyleTall">
        <item name="android:layout_height">@dimen/button_height_small</item>
    </style>
    <style name="buttonLeftLow" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="buttonRightLow" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="buttonSingleLow" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="buttonLeftTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="buttonRightTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="buttonSingleTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>


    <declare-styleable name="CustomDrawable">
        <attr name="customText" format="string" />
        <attr name="customColor" format="color" />
        <attr name="customTextSize" format="dimension" />
    </declare-styleable>

</resources>
