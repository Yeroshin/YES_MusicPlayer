<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="?attr/light" />
        </shape>
    </item>
    <item
        android:top="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="?attr/shadow" />
        </shape>
    </item>
    <item
        android:top="2dp"
        android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="?attr/on_primary_activated" />

        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/selectable_color"
                android:dashWidth="2dp"
                android:dashGap="2dp" />

        </shape>
    </item>

</layer-list>