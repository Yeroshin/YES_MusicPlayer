<resources>
    <style name="Theme.AppCompat.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>

        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <!-- Base application theme. -->
    <style name="text" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:shadowColor">?attr/shadow</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:singleLine">true</item>
    </style >

    <style name="textLabel" parent="margin">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style >
    <style name="textSmall" parent="margin">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style >
    <style name="yesSwitch" parent="margin" >
        <item name="android:showText">false</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:track">@drawable/switch_selector</item>

        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:switchMinWidth">44dp</item>
    </style >
    <style name="ratingBar">
        <item name="colorControlNormal">#ffa800</item>
        <item name="colorControlActivated">#ffa800</item>
    </style>
    <style name="container">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="margin">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="padding">
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="mainDisplay">
        <item name="android:background">@drawable/display</item>
    </style>
    <style name="buttonStyle">
        <item name="android:tint">?attr/on_primary</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="on_primary">@color/pressable_color</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="buttonStyleTall" parent="buttonStyle">
        <item name="android:layout_height">@dimen/button_height_regular</item>
    </style>
    <style name="buttonStyleLow" parent="buttonStyleTall">
        <item name="android:layout_height">@dimen/button_height_small</item>
    </style>
    <style name="buttonLeftLow" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">1dp</item>
    </style>
    <style name="buttonRightLow" parent="buttonStyleLow">
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="buttonSingleLow" parent="buttonStyleLow">
        <item name="android:background">@drawable/button_single</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="buttonLeftTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="buttonRightTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>
    <style name="buttonSingleTall" parent="buttonStyleLow">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="textInListSmall" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/activatable_color</item>

    </style>
    <style name="textInListLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/activatable_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">16dp</item>

    </style>
    <style name="TrailingIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:buttonTint">?attr/on_primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="leadingIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="leadingText">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


</resources>
